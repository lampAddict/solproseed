{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper" data-user="{{ app.user.id }}">
        <div id="container">
            <table cellpadding="0" cellspacing="0" class="data-content">
                <thead>
                    <tr>
                        <th>Период</th>
                        <th>Пользователь</th>
                        <th>Отчёт</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td align="center">
                            <input id="datePeriod" class="daterange" type="text" value=""/>
                        </td>
                        <td>
                            <table>
                                {% for user in users %}
                                    <tr>
                                        <td align="right">
                                            {{ user['name'] }}
                                        </td>
                                        <td align="left" style="width: 17px">
                                            <input class="selectUser" type="checkbox" data-user="{{ user['id'] }}">
                                        </td>
                                    </tr>
                                {% endfor %}
                            </table>
                        </td>
                        <td align="center">
                            <a class="btn btn-default prepareReport">Выгрузить отчёт</a>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
